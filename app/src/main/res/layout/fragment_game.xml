<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_500">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/player_turn_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="O's Turn" />

    <ImageView
        android:id="@+id/image_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/board"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_background"
        app:layout_constraintBottom_toTopOf="but"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/player_turn_view" />

    <ImageView
        android:id="@+id/grid_upper_left"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginStart="47dp"
        android:contentDescription="@string/u_l_empty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/grid_upper_center" />

    <ImageView
        android:id="@+id/grid_upper_center"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="51dp"
        android:contentDescription="@string/u_c_empty"
        app:layout_constraintBottom_toBottomOf="@id/grid_upper_left"
        app:layout_constraintEnd_toStartOf="@+id/grid_upper_right"
        app:layout_constraintStart_toEndOf="@+id/grid_upper_left"
        app:layout_constraintTop_toBottomOf="@id/player_turn_view"
        tools:layout_editor_absoluteY="139dp" />

    <ImageView
        android:id="@+id/grid_upper_right"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginEnd="52dp"
        android:contentDescription="@string/u_r_empty"
        app:layout_constraintBottom_toBottomOf="@id/grid_upper_center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/grid_upper_center" />

    <ImageView
        android:id="@+id/grid_center_left"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginStart="47dp"
        android:contentDescription="@string/c_l_empty"
        app:layout_constraintStart_toStartOf="@+id/image_background"
        app:layout_constraintTop_toTopOf="@+id/grid_center" />

    <ImageView
        android:id="@+id/grid_center"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="44dp"
        android:contentDescription="@string/c_empty"
        app:layout_constraintBottom_toTopOf="@+id/grid_lower_center"
        app:layout_constraintEnd_toStartOf="@+id/grid_center_right"
        app:layout_constraintStart_toEndOf="@+id/grid_center_left"
        app:layout_constraintTop_toBottomOf="@+id/grid_upper_center" />

    <ImageView
        android:id="@+id/grid_center_right"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginEnd="52dp"
        android:contentDescription="@string/c_r_empty"
        app:layout_constraintBottom_toBottomOf="@+id/grid_center"
        app:layout_constraintEnd_toEndOf="@+id/image_background" />

    <ImageView
        android:id="@+id/grid_lower_left"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginStart="47dp"
        android:contentDescription="@string/l_l_empty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/grid_lower_center" />

    <ImageView
        android:id="@+id/grid_lower_center"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:contentDescription="@string/l_c_empty"
        app:layout_constraintEnd_toStartOf="@+id/grid_lower_right"
        app:layout_constraintStart_toEndOf="@+id/grid_lower_left"
        app:layout_constraintTop_toTopOf="@+id/grid_lower_right" />

    <ImageView
        android:id="@+id/grid_lower_right"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginEnd="52dp"
        android:contentDescription="@string/l_r_empty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/grid_lower_center"
        tools:layout_editor_absoluteY="370dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_end_game"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/end_game"
        android:textColor="@color/teal_200"
        app:cornerRadius="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_background"
        app:strokeColor="@color/teal_200"
        app:strokeWidth="3dp" />


</androidx.constraintlayout.widget.ConstraintLayout>